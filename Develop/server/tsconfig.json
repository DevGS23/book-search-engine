{
  "compilerOptions": {
    "target": "ES6",                    // Target ECMAScript version
    "module": "node16",                  // Use Node.js module system
    "outDir": "./build",                  // Output compiled JS files to the "build" folder
    "rootDir": "./src",                   // Set the root directory for TypeScript source files
    "esModuleInterop": true,              // Ensure proper interop with non-ES module libraries
    "moduleResolution": "node16",         // Use Node.js-style module resolution
    "strict": true,                       // Enable strict type checking
    "skipLibCheck": true,                 // Skip type checking of declaration files for faster compilation
    "forceConsistentCasingInFileNames": true  // Ensure consistent casing in file names
  },
  "include": [
    "src/**/*.ts"                         // Include all TypeScript files inside the "src" folder
  ],
  "exclude": [
    "node_modules"                        // Exclude "node_modules" from being compiled
  ]
}
